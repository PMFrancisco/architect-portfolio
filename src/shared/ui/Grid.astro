---
/**
 * Grid Component
 * Swiss-style 12-column grid system
 */
interface Props {
  as?: 'div' | 'ul' | 'ol';
  class?: string;
  cols?: 4 | 6 | 8 | 12;
  gap?: 'none' | 'small' | 'default' | 'large';
}

const { 
  as: Tag = 'div', 
  class: className = '',
  cols = 12,
  gap = 'default'
} = Astro.props;

const colClasses = {
  4: 'grid-cols-2 md:grid-cols-4',
  6: 'grid-cols-2 md:grid-cols-3 lg:grid-cols-6',
  8: 'grid-cols-2 md:grid-cols-4 lg:grid-cols-8',
  12: 'grid-cols-4 md:grid-cols-8 lg:grid-cols-12',
};

const gapClasses = {
  none: 'gap-0',
  small: 'gap-3 md:gap-4',
  default: 'gap-4 md:gap-6',
  large: 'gap-6 md:gap-8',
};
---

<Tag class:list={['grid', colClasses[cols], gapClasses[gap], className]}>
  <slot />
</Tag>


