---
/**
 * Button Component
 * Swiss-style button with multiple variants
 */
interface Props {
  as?: 'button' | 'a';
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost';
  size?: 'small' | 'default' | 'large';
  class?: string;
  type?: 'button' | 'submit' | 'reset';
  disabled?: boolean;
  fullWidth?: boolean;
}

const { 
  as,
  href,
  variant = 'primary',
  size = 'default',
  class: className = '',
  type = 'button',
  disabled = false,
  fullWidth = false,
} = Astro.props;

// Determine tag based on href or explicit 'as' prop
const Tag = as || (href ? 'a' : 'button');

const baseClasses = [
  'inline-flex items-center justify-center font-medium',
  'transition-all duration-200',
  'focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary',
  'disabled:opacity-50 disabled:cursor-not-allowed',
];

const variantClasses = {
  primary: 'bg-primary text-white hover:bg-primary-dark active:scale-[0.98]',
  secondary: 'bg-neutral-900 text-white hover:bg-neutral-800 dark:bg-white dark:text-neutral-900 dark:hover:bg-neutral-100 active:scale-[0.98]',
  outline: 'border-2 border-neutral-900 text-neutral-900 hover:bg-neutral-900 hover:text-white dark:border-white dark:text-white dark:hover:bg-white dark:hover:text-neutral-900 active:scale-[0.98]',
  ghost: 'text-neutral-900 hover:bg-neutral-100 dark:text-white dark:hover:bg-neutral-800 active:scale-[0.98]',
};

const sizeClasses = {
  small: 'px-4 py-2 text-sm',
  default: 'px-6 py-3 text-base',
  large: 'px-8 py-4 text-lg',
};
---

<Tag
  href={Tag === 'a' ? href : undefined}
  type={Tag === 'button' ? type : undefined}
  disabled={Tag === 'button' ? disabled : undefined}
  class:list={[
    ...baseClasses,
    variantClasses[variant],
    sizeClasses[size],
    fullWidth && 'w-full',
    className
  ]}
>
  <slot />
</Tag>


