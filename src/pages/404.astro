---
/**
 * 404 Error Page
 * Swiss-style minimalist error page
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import Container from '../shared/ui/Container.astro';
import Typography from '../shared/ui/Typography.astro';
import Button from '../shared/ui/Button.astro';
import Icon from '../shared/ui/Icon.astro';
---

<BaseLayout title="404 | Página no encontrada">
  <main class="min-h-screen flex items-center justify-center">
    <Container>
      <div class="text-center max-w-xl mx-auto">
        <!-- Large 404 -->
        <p class="text-[12rem] md:text-[16rem] font-bold leading-none text-neutral-100 dark:text-neutral-900 select-none">
          404
        </p>
        
        <!-- Message -->
        <div class="-mt-16 md:-mt-24 relative z-10">
          <Typography as="h1" variant="h2" class="mb-4">
            Página no encontrada
          </Typography>
          
          <Typography as="p" variant="body-large" color="muted" class="mb-8">
            Lo sentimos, la página que buscas no existe o ha sido movida.
          </Typography>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <Button href="/" variant="primary">
              <Icon name="arrow-left" size="small" class="mr-2" />
              Volver al inicio
            </Button>
            <Button href="/proyectos" variant="outline">
              Ver proyectos
            </Button>
          </div>
        </div>
      </div>
    </Container>
  </main>
</BaseLayout>

