---
import BaseLayout from '../layouts/BaseLayout.astro';
import { useTranslations } from '../shared/i18n/translations';

const t = useTranslations('es');
---

<BaseLayout title="Arquitecto | Consultoría Arquitectónica" lang="es">
  <main class="min-h-screen">
    <!-- Placeholder: Components will be added in subsequent tasks -->
    <section class="h-screen flex items-center justify-center">
      <div class="text-center">
        <h1 class="mb-4">{t('hero.title')}</h1>
        <p class="text-xl text-neutral-600 dark:text-neutral-400 mb-8">
          {t('hero.subtitle')}
        </p>
        <a 
          href="#servicios" 
          class="inline-block px-8 py-4 bg-primary text-white font-medium hover:bg-primary-dark transition-colors"
        >
          {t('hero.cta')}
        </a>
      </div>
    </section>
  </main>
</BaseLayout>
